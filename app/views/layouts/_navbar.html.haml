%nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
  .container-fluid
    %a.navbar-brand{href: questions_path} Questions
    %button.navbar-toggler{"aria-controls" => "navbarNavDropdown", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-bs-target" => "#navbarNavDropdown", "data-bs-toggle" => "collapse", type: "button"}
      %span.navbar-toggler-icon
    #navbarNavDropdown.collapse.navbar-collapse
      %ul.navbar-nav
        - if user_signed_in?
          %li.nav-item
            Logged in as
            = succeed "." do
              %strong= current_user.email
          %li.nav-item.mx-2
            = link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link'
          %li.nav-item
            = link_to 'Sign out', destroy_user_session_path, data: { method: :delete, confirm: "Are you sure?" }, :class => 'navbar-link'
        - else
          %li.nav-item.mx-2
            = link_to "Sign up", new_user_registration_path, :class => 'navbar-link'
          %li.nav-item
            = link_to "Login", new_user_session_path, :class => 'navbar-link'